<%= form_with(model: @post) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.label :published %>
    <%= form.check_box :published %>
  </div>
  <div>
  <%= form.label :tags %>
    <%= form.collection_check_boxes :tag_ids, Tag.all, :id, :title do |b| %>
      <div>
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
    </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
